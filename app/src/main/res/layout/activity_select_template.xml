<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/templateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="@drawable/color"
    android:clickable="true"
    android:onClick="reset"
    tools:context="com.android.asplabs.thestorywriter.SelectTemplate" android:focusable="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/select_layout"
        android:textAlignment="inherit"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GoForIt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:onClick="startEdit"
        android:text="@string/go_for_it"
        android:textColor="#ffff"
        android:textStyle="italic|bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw0" />

            <ImageView

                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw1" />
            <ImageView

                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw2" />
            <ImageView

                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw3" />
            <ImageView

                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw4" />

            <ImageView

                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="9dp"
                android:layout_marginStart="2dp"
                android:onClick="onClick"
                android:src="@drawable/tsw5" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
